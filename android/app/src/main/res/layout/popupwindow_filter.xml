<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:id="@+id/top_layout"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="76.2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rel_check1">
            <View
                android:layout_width="13.2dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/blankview1"
                />
            <Button
                android:layout_width="13.8dp"
                android:layout_height="13.8dp"
                android:paddingTop="10dp"
                android:id="@+id/checkbox1"
                android:background="@mipmap/checkbox_ok"
                android:layout_toRightOf="@+id/blankview1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox1"
                android:text="同院系"
                android:paddingLeft="8dp"
                android:id="@+id/filter_tv1"

                android:textColor="#666666"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="76.2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rel_check2">
            <View
                android:layout_width="13.2dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/blankview2"
                />
            <Button
                android:layout_width="13.8dp"
                android:layout_height="13.8dp"
                android:paddingTop="10dp"
                android:id="@+id/checkbox2"
                android:layout_toRightOf="@+id/blankview2"
                android:background="@mipmap/checkbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox2"
                android:text="同年级"
                android:paddingLeft="8dp"
                android:id="@+id/filter_tv2"
                android:textColor="#666666"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:layout_width="76.2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rel_check3">
            <Button
                android:layout_width="13.2dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/blankview3"
                />
            <Button
                android:layout_width="13.8dp"
                android:layout_height="13.8dp"
                android:paddingTop="10dp"
                android:id="@+id/checkbox3"
                android:layout_toRightOf="@+id/blankview3"
                android:background="@mipmap/checkbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox3"
                android:text="同城市"
                android:paddingLeft="8dp"
                android:id="@+id/filter_tv3"
                android:textColor="#666666"/>
        </RelativeLayout>


